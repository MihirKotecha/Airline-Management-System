<!DOCTYPE html>

<html>
<head>
  <title>Available Flights</title>
  
</head>
<body>
  <h1>Available Flights</h1>
  <% if (flights.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Flight Number</th>
          <th>Departure Airport</th>
          <th>Arrival Airport</th>
          <th>Departure Time</th>
          <th>Arrival Time</th>
          <th>Seats Available</th>
          <th>Price</th>
          <th>Book</th>
        </tr>
      </thead>
      <tbody>
        <% flights.forEach((flight) => { %>
          <tr>
            <td><%= flight.FlightNumber %></td>
            <td><%= flight.DepartureAirportCode %></td>
            <td><%= flight.ArrivalAirportCode %></td>
     
            <td><%= flight.SeatsAvailable %></td>
            <td>$<%= flight.Price %></td>
            <td>
              <form action="/book-flight" method="POST">
                <input type="hidden" name="flightNumber" value="<%= flight.FlightNumber %>">
                <input type="hidden" name="numPassengers" value="<%= numPassengers %>">
                
                
                <button type="submit">Book</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <p>No flights available for the selected criteria.</p>
  <% } %>
</body>
</html>
